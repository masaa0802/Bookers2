<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/list', user: @user %>
        <h2>New book</h2>
        <%= render 'books/book', book: @newbook %>
        </div>
        <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <thred>
            <tr>
              <td><%= link_to attachment_image_tag(@user,:profile_image, :fill, 50, 50, fallback: "no_image.jpg"), user_path %></br>
                <%= link_to @user.name, user_path(@user) %></td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.body %></td>
              <td><% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class: "btn-success btn btn-sm" %>
                <% end %>
              </td>
              <td><% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に消しますか?"}, class: "btn-danger btn btn-sm "%>
                <% end %>
              </td>
               <% if @book.favorited_by?(current_user) %>
                <td>
                <%= link_to book_favorite_path(@book), method: :delete, remote: true do %>
                  ♥<%= @book.favorites.count %>
                </td>
                <% end %>
                <% else %>
                <td>
                <%= link_to book_favorite_path(@book), method: :post, remote: true do %>
                  ♡<%= @book.favorites.count %>
                </td>
                <% end %>
              <% end %>
              <td>コメント件数：<%=@book.book_comments.count %></td>
            </tr>
          </thred>
        </table>
        <table class="table">
          <thred>
            <tr>
              <% @book.book_comments.each do |book_comment| %>
              <td><%= attachment_image_tag(book_comment.user, :profile_image,50,50, fallback: "no_image.jpg") %></br>
              <%= link_to book_comment.user.name %></td>
              <td><%= book_comment.comment %></td>
              <% if book_comment.user == current_user %>
              <td><%= link_to "Destroy", book_book_comment_path(book_comment), method: :delete, remote: true, class: "btn-sm btn-danger" %>
              </td>
              <% end %>
              <% end %>
            </tr>
          </thred>
        </table>
          <div>
          <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
            <%= f.text_area :comment,  class: 'form-control mb-3' %>
            <%= f.submit "送信" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</p>