 <table class="table table-user">
   <h2>User info</h2>
    <thead>
      <tr>
       <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
      </tr>
    </thead>

    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
        <tr>
    		<th>follows</th>
    		 <th><%= link_to user.followings.count, followings_user_path(user) %></th>
    	 </tr>
     	<tr>
     		<th>followers</th>
     		<th><%= link_to user.followers.count, followers_user_path(user) %></th>
     	</tr>
    <tbody>
</table>
  <div class="row">
  	<% unless current_user == user %>
  	  <% if current_user.following?(user) %>
  	    <div><%= link_to 'フォローを外す', user_relationships_path(user.id), method: :delete, class: "btn btn-primary mb-3" %>
  	         <%= link_to 'Chatを始める', chat_path(@user.id) %></div>
  	  <% else %>
  	    <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-success mb-3" %>
  	  <% end %>
  	<% end %>
  </div>
  <div class='row'>
    <%= link_to "" ,edit_user_path(user), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
  </div>
