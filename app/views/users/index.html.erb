<p id="notice">
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thred>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </thred>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50,50, fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show","/users/#{user.id}"%></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
</p>